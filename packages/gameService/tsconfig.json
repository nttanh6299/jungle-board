{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "lib": ["es6", "dom", "es2017"]
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
